@namespace BlazorWpf

@inherits LayoutComponentBase

<MApp>

    <MNavigationDrawer @bind-Value=value App>
        <MButton Block Text Href="/">Home</MButton>
        <MButton Block Text Href="/counter">Counter</MButton>
        <MButton Block Text Href="/about">About</MButton>
    </MNavigationDrawer>

    <MAppBar App>
        <MButton Icon OnClick="()=>value=!value"><MIcon>@(value ? "mdi-menu-left-outline" : "mdi-menu-right-outline")</MIcon></MButton>
    </MAppBar>

    <MMain>
        <MContainer Fluid>
            @Body
        </MContainer>
    </MMain>
</MApp>

@code {
    public bool value { get; set; }
}