@using Masa.Blazor.Presets.PageStack
@inherits LayoutComponentBase

<MApp>
    <NavMenu/>
    <MMain>
        <MContainer Fluid>
            <PPageStack TabRules="@_tabRules">
                @Body
            </PPageStack>
        </MContainer>
    </MMain>
</MApp>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {

    internal static TabRule Home = new("^/$");
    internal static TabRule Counter = new("^/counter$");
    internal static TabRule Weather = new("^/weather$");

    private readonly HashSet<TabRule> _tabRules = [Home, Counter, Weather];

}