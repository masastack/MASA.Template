{
  "$schema": "http://json.schemastore.org/template",
  "author": "Masa",
  "classifications": [
    "Blazor",
    "Server",
    "MASA"
  ],
  "identity": "Masa.Blazor.Server.Template",
  "name": "Masa Blazor Server App",
  "description": "A Server template with a basic layout",
  "shortName": "masablazor-server",
  "sourceName": "BlazorServer",
  "defaultName": "MasaBlazorApp",
  "generatorVersions": "[1.0.0.0-*)",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "BlazorServer.csproj"
    }
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(useCDN)",
          "exclude": [
            "wwwroot/css/fontawesome/**",
            "wwwroot/css/material/**",
            "wwwroot/css/materialdesign/**"
          ]
        },
        {
          "condition": "(iconSet == 'mdi')",
          "exclude": [
            "wwwroot/css/fontawesome/**",
            "wwwroot/css/material/**"
          ]
        },
        {
          "condition": "(iconSet == 'md')",
          "exclude": [
            "wwwroot/css/fontawesome/**",
            "wwwroot/css/materialdesign/**"
          ]
        },
        {
          "condition": "(iconSet == 'fa')",
          "exclude": [
            "wwwroot/css/material/**",
            "wwwroot/css/materialdesign/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "useCDN": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Use CDN, otherwise use the local files"
    },
    "iconSet": {
      "type": "parameter",
      "description": "The icon set to use.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "mdi",
          "description": "Material Design Icons"
        },
        {
          "choice": "md",
          "description": "Material Icons"
        },
        {
          "choice": "fa",
          "description": "Font Awesome 5"
        }
      ],
      "defaultValue": "mdi"
    },
    "mdi": {
      "type": "computed",
      "value": "(iconSet == \"mdi\")"
    },
    "md": {
      "type": "computed",
      "value": "(iconSet == \"md\")"
    },
    "fa": {
      "type": "computed",
      "value": "(iconSet == \"fa\")"
    },
    "kestrelHttpPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port number to use for the HTTP endpoint in launchSettings.json."
    },
    "kestrelHttpPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 5000,
        "high": 5300
      }
    },
    "kestrelHttpPortReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "kestrelHttpPort",
        "fallbackVariableName": "kestrelHttpPortGenerated"
      },
      "replaces": "5000"
    },
    "kestrelHttpsPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port number to use for the HTTPS endpoint in launchSettings.json. This option is only applicable when the parameter no-https is not used (no-https will be ignored if either IndividualB2C or OrganizationalAuth is used)."
    },
    "kestrelHttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7300
      }
    },
    "kestrelHttpsPortReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "kestrelHttpsPort",
        "fallbackVariableName": "kestrelHttpsPortGenerated"
      },
      "replaces": "5001"
    },
    "iisHttpPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port number to use for the IIS Express HTTP endpoint in launchSettings.json."
    },
    "iisHttpPortGenerated": {
      "type": "generated",
      "generator": "port"
    },
    "iisHttpPortReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "iisHttpPort",
        "fallbackVariableName": "iisHttpPortGenerated"
      },
      "replaces": "8080"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0",
          "description": "Target net6.0"
        },
        {
          "choice": "net7.0",
          "description": "Target net7.0"
        },
        {
          "choice": "net8.0",
          "description": "Target net8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target net9.0"
        }
      ],
      "replaces": "net9.0",
      "defaultValue": "net9.0"
    }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}