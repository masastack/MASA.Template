@inherits LayoutComponentBase

<MApp>
    <MAppBar App>
        <MAppBarNavIcon @onclick="() => _drawer = !_drawer"></MAppBarNavIcon>
        <MToolbarTitle>MASA Blazor</MToolbarTitle>
        <MSpacer></MSpacer>
        <MButton Text Color="primary" Target="_blank" Href="https://docs.masastack.com/blazor/introduction/why-masa-blazor">About</MButton>
    </MAppBar>

    <MNavigationDrawer App @bind-Value="_drawer">
        <MList Nav Routable>
            <MListItemGroup ActiveClass="primary--text">
                <MListItem Href="/">
                    <MListItemIcon>
                        <MIcon>mdi-home</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>Home</MListItemTitle>
                    </MListItemContent>
                </MListItem>
                <MListItem Href="/counter">
                    <MListItemIcon>
                        <MIcon>mdi-plus</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>Counter</MListItemTitle>
                    </MListItemContent>
                </MListItem>
                <MListItem Href="/fetchdata">
                    <MListItemIcon>
                        <MIcon>mdi-list-box</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>Fetch data</MListItemTitle>
                    </MListItemContent>
                </MListItem>
            </MListItemGroup>
        </MList>
    </MNavigationDrawer>

    <MMain>
        <MContainer Fluid>
            @Body
        </MContainer>
    </MMain>
</MApp>

@code {

    private bool _drawer;

}
